<div id="breadcrumb">
    <a href="<%= sails.config.custom.baseUrl %>blog" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Simple CRUD</a>
    <a href="#"><%= title %></a>
</div>

<div class="container-fluid">
    <% var successMessage = 
        `<div class="row-fluid">
            <div class="span12">
                <div class="alert alert-success">
                    <button class="close" data-dismiss="alert">×</button>
                    <strong>Success!</strong> You have successfully created a new article.
                </div>
            </div>  
        </div>`;
        var errorMessage = 
        `<div class="row-fluid">
            <div class="span12">
                <div class="alert alert-danger">
                    <button class="close" data-dismiss="alert">×</button>
                    <strong>Error!</strong> You already have the same title in another article. Please change your title.
                </div>
            </div>  
        </div>`;
    %>
    <% if (success) { %>
        <%- successMessage %>
    <% } %>
    <% if (invalid) { %>
        <%- errorMessage %>
    <% } %>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon">
                        <i class="icon-align-justify"></i>                                  
                    </span>
                    <h5><%= title %></h5>
                </div>
                <div class="widget-content">
                    <form action="" method="POST">
                        <div class="control-group">
                            <label for="title" class="control-label">Title:</label>
                            <div class="controls">
                                <input type="text" name="title" style="width:95%;" required maxlength="255" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label for="content" class="control-label">Content:</label>
                            <div class="controls">
                                <textarea name="content" style="width:95%;height:250px;" required maxlength="65535"></textarea>
                            </div>
                        </div>
                        <center>
                            <div class="form-actions">
                                <input type="submit" name="submit" value="Create a new article" class="btn btn-success"/>
                            </div>
                        </center>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- SUCCESS Modal -->
    <div id="deleteModal" class="modal hide">
        <div class="modal-header">
            <button data-dismiss="modal" class="close" type="button">×</button>
            <h3>Confirm</h3>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this article?</p>
        </div>
        <div class="modal-footer">
            <a class="btn btn-danger" id="deleteLink">Delete</a>
            <a data-dismiss="modal" class="btn black" href="#" style="color:black;">Cancel</a>
        </div>
    </div>
    <!-- End of SUCCESS Modal -->

    <div class="row-fluid">
        <center>
            <div class="span12" style="margin-top:2rem;">
                <a href="<%= sails.config.custom.baseUrl %>blog" class="btn btn-inverse">Back to Home</a>
            </div>
        </center>
    </div>

    
