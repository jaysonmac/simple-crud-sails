<div id="breadcrumb">
    <a href="<%= sails.config.custom.baseUrl %>blog" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Simple CRUD</a>
    <a href="#"><%= title %></a>
</div>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon">
                        <i class="icon-align-justify"></i>                                  
                    </span>
                    <h5>Articles</h5>
                </div>
                <div class="widget-content nopadding">
                    <table class="table table-bordered table-striped table-hover data-table" id="articleTable">
                        <thead>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Create</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </thead>
                        <tbody>
                            <% blog.forEach( function (article) { // Use foreach to display all articles in each row %>
                            <tr>
                                <td>
                                    <a href = "<%= sails.config.custom.baseUrl + "blog/" + article.slug %>" style="color:black;">
                                        <%= article.title %>
                                    </a>
                                </td>
                                <td>
                                    <%= article.content.substr(0,75) + "..." %>
                                </td>
                                <td width="1%">
                                    <a href="<%= sails.config.custom.baseUrl + "blog/" + article.slug %>" class="btn btn-info btn-mini action">
                                        <i class="icon icon-eye-open"></i><br>
                                        View
                                    </a>
                                </td>
                                <td width="1%">
                                    <a href="<%= sails.config.custom.baseUrl + "blog/edit/" + article.slug %>" class="btn btn-warning btn-mini action">
                                        <i class="icon icon-pencil"></i><br>
                                        Edit
                                    </a>
                                </td>
                                <td width="1%">
                                    <a data-toggle="modal" class="btn btn-danger btn-mini action" onclick="showModal('<%= article.slug %>')" id="<%= article.slug %>">
                                        <i class="icon icon-trash"></i><br>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                            <% } )// End of foreach %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- DELETE Modal -->
    <div id="deleteModal" class="modal hide">
        <div class="modal-header">
            <button data-dismiss="modal" class="close" type="button">Ã—</button>
            <h3>Confirm</h3>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this article?</p>
        </div>
        <div class="modal-footer">
            <a data-dismiss="modal" class="btn btn-danger" id="deleteLink">Delete</a>
            <a data-dismiss="modal" class="btn black" href="#" style="color:black;">Cancel</a>
        </div>
    </div>
    <!-- End of DELETE Modal -->

    <div class="row-fluid">
        <center>
            <div class="span12" style="margin-top:2rem;">
                <a href="<%= sails.config.custom.baseUrl %>blog" class="btn btn-inverse">Back to Home</a>
            </div>
        </center>
    </div>

    
