<section class="content">
    <!-- Title -->
    <div class="container-fluid">
        <ol class="breadcrumb" style="display:inline-block;float:right;margin-top:0">
            <li><a href="<%= sails.config.custom.baseUrl %>blog"><i class="material-icons">home</i> Simple CRUD</a></li>
            <li class="active"><a href="<%= sails.config.custom.baseUrl %>blog/create"><i class="material-icons">mode_edit</i> Edit: <%= articleTitle %></a></li>
        </ol>
        <div class="block-header" style="display:inline-block;margin-top:0.7rem">
            <h2 style="display:inline-block;font-size:2rem;"><%= title %></h2> &mdash; <small>Simple CRUD (SailsJS)</small>
        </div>
    </div>
    <!-- #Title -->
    <% var errorMessage =
    `<div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <strong>Error!</strong> You already have the same title in another article. Please change your title.
            </div>
        </div>
    </div>`;
    %>
    <% if (invalid) { %>
        <%- errorMessage %>
    <% } %>
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <form role="form" action="" method="POST" id="editForm">
                <div class="card">
                    <div class="header">
                        <h2>Edit article</h2>
                    </div>
                    <div class="body">
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <label for="title" class="form-label">Title:</label>
                                        <input type="text" name="title" id="title" required pattern=".{1,255}" title="A maximum of 255 characters only" value="<%= articleTitle %>" class="form-control" />
                                        <input type="hidden" name="oldTitle" value="<%= articleTitle %>"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <label for="content" class="form-label">Content:</label>
                                        <textarea rows="5" name="content" id="content" required pattern=".{1,65535}" class="form-control auto-growth" title="A maximum of 65535 characters only"><%= articleContent %></textarea>
                                        <input type="hidden" name="oldContent" value="<%= articleContent %>"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <center>
                                    <button type="submit" form="editForm" name="submit" class="btn btn-warning waves-effect">Edit article</button>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Back to Home -->
    <div class="row clearfix" style="margin-bottom:2rem;">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <center>
                <a href="<%= sails.config.custom.baseUrl %>blog" class="btn btn-primary waves-effect">Back to Home</a>
            </center>
        </div>
    </div>
    <!-- #Back to Home -->
</section>
